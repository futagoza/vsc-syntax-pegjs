{
    "name": "pegjs-syntax",
    "description": "Syntax highlighting for PEG.js in Visual Studio Code",
    "version": "0.1.1",
    "publisher": "futagozaryuu",
    "displayName": "PEG.js Syntax",
    "repository": {
        "type": "git",
        "url": "https://github.com/futagoza/vsc-syntax-pegjs"
    },
    "bugs": {
        "url": "https://github.com/futagoza/vsc-syntax-pegjs/issues"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#F5DA55",
        "theme": "light"
    },
    "license": "MIT",
    "contributes": {
        "languages": [
            {
                "id": "peg-grammar",
                "aliases": [
                    "PEG.js (Grammar)",
                    "peg"
                ],
                "extensions": [
                    ".peg-grammar"
                ],
                "configuration": "./configuration.json"
            },
            {
                "id": "pegjs",
                "aliases": [
                    "PEG.js (ES6+)",
                    "PEG.js",
                    "pegjs",
                    "peg.js"
                ],
                "extensions": [
                    ".pegjs"
                ],
                "configuration": "./configuration.json"
            },
            {
                "id": "pegcoffee",
                "aliases": [
                    "PEG.js (CoffeeScript)"
                ],
                "extensions": [
                    ".pegcoffee"
                ],
                "configuration": "./configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "peg-grammar",
                "scopeName": "grammar.pegjs",
                "path": "./syntaxes/grammar.json"
            },
            {
                "language": "pegjs",
                "scopeName": "source.pegjs",
                "path": "./syntaxes/pegjs.json"
            },
            {
                "language": "pegcoffee",
                "scopeName": "source.pegcoffee",
                "path": "./syntaxes/pegcoffee.json"
            }
        ]
    }
}
